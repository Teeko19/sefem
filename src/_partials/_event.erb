<% starts_at = event.data.starts_at %>
<% ends_at = event.data.ends_at %>

<% tag_thumbnail = event_tag_details(event.taxonomies.tag.terms.first).thumbnails&.sample %>
<% event_thumbnail = event.data.thumbnail.present? ? event.data.thumbnail : tag_thumbnail %>

<div class="relative rounded-xl overflow-hidden will-change-transform"
     data-search-target="querable"
     data-search-keys="<%= event_search_keys event %>"
     data-filter-target="filterable"
     data-filter-city="<%= event.data.location&.city %>"
     data-filter-tag="<%= event.taxonomies.tag.terms.map { |t| t.label }.inspect %>"
>
  <% if event_thumbnail %>
    <img src="<%= relative_url event_thumbnail %>"
         loading="lazy"
         class="absolute top-0 left-0 w-full z-0 object-cover object-center opacity-20"
    >

    <div class="absolute z-0 w-full h-full backdrop-blur-sm"></div>
  <% else %>
    <div class="absolute top-0 left-0 w-full h-full z-0 opacity-20"
         style="background-color: <%= month.data.color %>"
    ></div>
  <% end %>

  <div class="p-4 relative z-10 h-full flex flex-col gap-4">
    <div class="grid grid-cols-[max-content,1fr]">
      <div class="flex gap-1.5 items-start">
        <div class="aspect-square w-12 rounded-lg relative"
             style="background-color: <%= month_for_date(starts_at).data.color %>"
        >
          <p class="text-xl sm:text-2xl font-medium text-center absolute top-0.5 left-0 right-0">
            <%= starts_at.day %>
          </p>
          <p class="text-xs text-fg-tertiary text-center absolute bottom-0.5 left-0 right-0">
            <% if month_for_date(starts_at) == month %>
              <%= l(starts_at, format: "%a").humanize %>
            <% else %>
              <a href="<%= relative_url month_for_date(starts_at) %>">
                ← <%= l(starts_at, format: "%b").humanize %>
              </a>
            <% end %>
          </p>
        </div>

        <% if event_with_multiple_days? event %>
          <div class="aspect-square w-12 rounded-lg relative"
               style="background-color: <%= month_for_date(ends_at).data.color %>"
          >
            <p class="text-xl sm:text-2xl font-medium text-center absolute top-0.5 left-0 right-0">
              <%= ends_at.day %>
            </p>
            <p class="text-xs text-fg-tertiary text-center absolute bottom-0.5 left-0 right-0">
              <% if month_for_date(ends_at) == month %>
                <%= l(ends_at, format: "%a").humanize %>
              <% else %>
                <a href="<%= relative_url month_for_date(ends_at) %>">
                  <%= l(ends_at, format: "%b").humanize %> →
                </a>
              <% end %>
            </p>
          </div>
        <% end %>
      </div>

      <div class="flex flex-col items-end gap-1">
        <p class="font-medium uppercase flex items-center gap-1">
          <span class="material-symbols-outlined icon-outline icon-sm">place</span>
          <span class="line-clamp-1"><%= event.data.location.city %></span>
        </p>

        <div class="text-fg-secondary flex gap-1">
          <% event.taxonomies.tag.terms.each do |tag| %>
            <span class="material-symbols-outlined icon-sm">
              <%= event_tag_details(tag).icon %>
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <h4 class="flex-grow text-xl sm:text-2xl font-medium sm:line-clamp-2">
      <%= event.data.title %>
    </h4>

    <div class="flex flex-col sm:flex-row gap-x-8 gap-y-4 text-fg-secondary">
      <div>
        <p class="flex items-center gap-1">
          <span class="material-symbols-outlined icon-sm">map</span>
          <span class="line-clamp-1"><%= event.data.location.address %></span>
        </p>

        <p class="flex items-center gap-1.5">
          <span class="material-symbols-outlined icon-sm">schedule</span>
          <span class="line-clamp-1">
            <% if event_with_multiple_days? event %>
              dalle <%= format('%02d', starts_at&.hour) %>
              del <%= starts_at.day %>
              alle <%= format('%02d', ends_at.hour) %>
              del <%= ends_at.day %>
            <% else %>
              dalle <%= format('%02d', starts_at&.hour) %>
              <% if ends_at.present? %>
                alle <%= format('%02d', ends_at.hour) %>
              <% end %>
            <% end %>
          </span>
        </p>
      </div>

      <% if event.data.link.present? || event.data.poster.present? %>
        <div class="flex-shrink-0">
          <% if event.data.link.present? %>
            <a href="<%= event.data.link %>"
               target="_blank"
               class="flex items-center gap-1.5 hover:text-fg"
            >
              <span class="material-symbols-outlined icon-sm">link</span>
              <span>Dettagli</span>
            </a>
          <% end %>

          <% if event.data.poster.present? %>
            <a href="<%= relative_url event.data.poster %>"
               target="_blank"
               class="flex items-center gap-1.5 hover:text-fg"
            >
              <span class="material-symbols-outlined icon-sm">receipt_long</span>
              <span>Locandina</span>
            </a>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
